<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005b96">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#005b96">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_list">

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/nameTextView"
                style="@style/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#FFFFFF" />


            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/locationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/addressTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:drawableLeft="@drawable/location"
                android:text=""
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/workHoursTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/open_time"
                android:text=""
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/phoneTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone"
                android:autoLink="phone"

                android:text=""
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/siteTextView"
                style="@style/locationAddressSchedulePricePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/website"
                android:autoLink="web"

                android:text=""
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>